---
import ImageMod from "@/components/ImageMod.astro";
import Base from "@/layouts/Base.astro";
import portfolioData from "@/config/portfolio.json";

const { featured_projects } = portfolioData;

const meta_title = "Portfolio - Wu Ganglin";
const description =
  "Explore my projects and technical work as a Math Tutor and aspiring Backend Engineer.";
---

<Base title="Portfolio" meta_title={meta_title} description={description}>
  <section class="section">
    <div class="container">
      <div class="row">
        <div class="mx-auto text-center lg:col-10">
          <h1 class="text-6xl lg:text-7xl font-bold text-dark mb-6">
            Portfolio
          </h1>
          <p class="text-xl text-light mb-16 leading-relaxed">
            A collection of projects showcasing my journey in software
            development and backend engineering. Each project represents a step
            forward in my learning and professional growth.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="section-sm">
    <div class="container">
      <div class="row">
        {
          featured_projects.map((project, index) => (
            <div class="col-12 mb-12">
              <div
                class={`row items-center ${index % 2 === 1 ? "lg:flex-row-reverse" : ""}`}
              >
                <div class="col-12 lg:col-6 mb-6 lg:mb-0">
                  <ImageMod
                    src={project.image}
                    alt={project.title}
                    width={600}
                    height={400}
                    class="w-full rounded-lg shadow-lg"
                  />
                </div>
                <div
                  class={`col-12 lg:col-6 ${index % 2 === 1 ? "lg:pr-12" : "lg:pl-12"}`}
                >
                  <div class="flex items-center gap-3 mb-4">
                    <h2 class="text-3xl font-bold text-dark">
                      {project.title}
                    </h2>
                    <span
                      class={`px-3 py-1 rounded-full text-sm font-medium ${
                        project.status === "completed"
                          ? "bg-green-100 text-green-800"
                          : "bg-blue-100 text-blue-800"
                      }`}
                    >
                      {project.status === "completed"
                        ? "Completed"
                        : "In Progress"}
                    </span>
                  </div>

                  <p class="text-light mb-6 text-lg leading-relaxed">
                    {project.description}
                  </p>

                  <div class="mb-6">
                    <h3 class="text-sm font-semibold text-dark mb-3 uppercase tracking-wide">
                      Tech Stack
                    </h3>
                    <div class="flex flex-wrap gap-2">
                      {project.tech_stack.map((tech) => (
                        <span class="px-3 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium">
                          {tech}
                        </span>
                      ))}
                    </div>
                  </div>

                  <div class="flex gap-4">
                    {project.github_url && project.github_url !== "#" && (
                      <a
                        href={project.github_url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="btn btn-outline-primary"
                      >
                        <svg
                          class="w-4 h-4 mr-2"
                          fill="currentColor"
                          viewBox="0 0 20 20"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z"
                            clip-rule="evenodd"
                          />
                        </svg>
                        View Code
                      </a>
                    )}
                    {project.live_url && project.live_url !== "#" && (
                      <a
                        href={project.live_url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="btn btn-primary"
                      >
                        <svg
                          class="w-4 h-4 mr-2"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                          />
                        </svg>
                        Live Demo
                      </a>
                    )}
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="section bg-gray-50">
    <div class="container">
      <div class="row">
        <div class="mx-auto text-center lg:col-8">
          <h2 class="text-4xl font-bold text-dark mb-6">Let's Work Together</h2>
          <p class="text-lg text-light mb-8">
            I'm always interested in new opportunities and collaborations.
            Whether you have a project in mind or just want to connect, feel
            free to reach out!
          </p>
          <a href="/contact" class="btn btn-primary btn-lg"> Get In Touch </a>
        </div>
      </div>
    </div>
  </section>
</Base>
